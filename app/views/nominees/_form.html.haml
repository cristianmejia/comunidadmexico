= form_for @nominee do |f|
  - if @nominee.errors.any?
    #error_explanation
      %h2= "#{pluralize(@nominee.errors.count, "error")} prohibited this nominee from being saved:"
      %ul
        - @nominee.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title, :class => 'form-control'
  .field
    = f.label :avatar
    = f.text_field :avatar, :class => 'form-control'
  .field
    = f.label :poll
    = f.text_field :poll, :class => 'form-control'
  .field
    = f.label :published
    = f.check_box :published
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :popular_vote
    = f.number_field :popular_vote
  .actions
    = f.submit 'Save'
