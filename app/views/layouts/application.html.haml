!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) + " | " + I18n.t(:title) : I18n.t(:title)
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Comunidadmexico'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track' => 'reload', 'data-turbolinks-eval' => 'false'
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    %main.main{:role => "main"}
      = render 'layouts/messages'
      = yield
    %footer.footer
      .container.text-center
        = render 'layouts/footer'
