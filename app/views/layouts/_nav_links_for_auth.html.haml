- if user_signed_in?
	%li.nav-item= link_to I18n.t(:edit_account), edit_user_registration_path, :class => "nav-link"
	%li.nav-item= link_to I18n.t(:sign_out), destroy_user_session_path, :method=>'delete', :class => "nav-link"
- else
	%li.nav-item= link_to I18n.t(:sign_in), destroy_user_session_path, :class => "nav-link"
	%li.nav-item= link_to I18n.t(:sign_up), destroy_user_session_path, :class => "nav-link"
- if user_signed_in?
	- if current_user.try(:admin?)
		%li.nav-item= link_to I18n.t(:admin), '/admin', :class => "nav-link"
		%li.nav-item= link_to I18n.t(:users), users_path, :class => "nav-link"