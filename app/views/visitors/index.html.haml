.col-md-12
  %h1=I18n.t(:title)
  %p=I18n.t(:description)	
  %h2=I18n.t(:search_in_the_community)
  =render 'layouts/search_widget'
  %h3=I18n.t(:top_spaces)
  %ul
    - if @topSpaces then 
      - @topSpaces.each do |s|
        %li=link_to image_tag(s.avatar, :alt => s.description), s.url.to_s, :title => s.title		
  %h3=I18n.t(:spaces)
  %ul
    - if  @allSpaces
      - @allSpaces.each do |a|
        %li=link_to image_tag(a.avatar, :alt => a.description), a.url.to_s, :title => a.title
  %h3=I18n.t(:top_polls)
  %ol
    - if @topPolls
      - @topNominees.each do |p|
        %li=link_to p.name p.uid
  %h3=I18n.t(:top_nominees)
  %ol
    - if @topNominees
      - @topNominees.each do |n|
        %li=link_to n.name n.uid
  %h3=I18n.t(:top_users)
  %ol
    - if @topUsers
      - @topUsers.each do |u|
        %li=link_to u.name u.uid
  %h3=I18n.t(:frequent_asked_questions)
  .tutorial
    %h4=I18n.t(:how_to_participate)
    %h4=I18n.t(:how_to_earn_badges)
    %h4=I18n.t(:what_is_a_poll)
  %h3=I18n.t(:what_is_a_space)
  %p
    = link_to 'Users:', users_path 
    = User.count
    registered
  %p
    - if user_signed_in?
      .nav-item= link_to I18n.t(:edit_account), edit_user_registration_path, :class => "nav-link"
      .nav-item= link_to I18n.t(:sign_out), destroy_user_session_path, :method=>'delete', :class => "nav-link"
    - else
      .nav-item= link_to I18n.t(:sign_in), new_user_session_path, :class => "nav-link"
      .nav-item= link_to I18n.t(:sign_up), new_user_registration_path, :class => "nav-link"
    - if user_signed_in?
      - if current_user.try(:admin?)
        .nav-item= link_to I18n.t(:admin), '/admin', :class => "nav-link"
        .nav-item= link_to I18n.t(:users), users_path, :class => "nav-link"
