.col-md-12
  %h1 = I18n.t(:title)
  %p = I18n.t(:description)	
  %h2 Busca en la comunidad
  =render 'layouts/search_widget'
  %h3 Top
  %ul
    - if @topSpaces then 
      - @topSpaces.each do |s|
        %li=link_to image_tag(s.avatar, :alt => s.description), s.url.to_s, :title => s.title		
  %h3 Espacios
  %ul
    - if  @allSpaces
      - @allSpaces.each do |s|
        %li=link_to image_tag(s.avatar, :alt => s.description), s.url.to_s, :title => s.title
  %h3 Top Encuestas
  %ol
  %h3 Top Nominados
  %ol
  %h3 Top Usuarios
  %ol
    - if @topUsers
      - @topUsers.each do |u|
        %li=link_to u.name u.uid
  %h3 Preguntas frecuentes
  .tutorial
    %h4 Cómo participar?
    %h4 Cómo ganar medallas?
    %h4 Qué son las especialidades?
  %h3 Qué son los espacios?
  %p
    = link_to 'Users:', users_path 
    = User.count
    registered
  %p
    = link_to 'Sign in', '/signin'
