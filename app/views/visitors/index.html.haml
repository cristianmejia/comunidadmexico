.col-md-12
  %h1 = I18n.t(:title)
  %p = I18n.t(:description)	
  %h2 Busca en la comunidad
  =render 'layouts/search_widget'
  %h3 Featured Spaces
  %ul
    - if @topSpaces then 
      - @topSpaces.each do |s|
        %li=link_to image_tag(s.avatar, :alt => s.description), s.url.to_s, :title => s.title		
  %h3 Lists Spaces
  %ul
    - if  @allSpaces
      - @allSpaces.each do |s|
        %li=link_to image_tag(s.avatar, :alt => s.description), s.url.to_s, :title => s.title
  %h3 Top Polls
  %ol
  %h3 Popular Nominees
  %ol
  %h3 Top Users
  %ol
    - if @topUsers
      - @topUsers.each do |u|
        %li=link_to u.name u.uid
  %p
    = link_to 'Users:', users_path 
    = User.count
    registered
  %p
    = link_to 'Sign in', '/signin'
