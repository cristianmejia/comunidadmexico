= form_for @notice do |f|
  - if @notice.errors.any?
    #error_explanation
      %h2= "#{pluralize(@notice.errors.count, "error")} prohibited this notice from being saved:"
      %ul
        - @notice.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title, :class => 'form-control'
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :author
    = f.text_field :author, :class => 'form-control'
  .actions
    = f.submit 'Save'
