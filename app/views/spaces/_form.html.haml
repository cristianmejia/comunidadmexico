= form_for @space do |f|
  - if @space.errors.any?
    #error_explanation
      %h2= "#{pluralize(@space.errors.count, "error")} prohibited this space from being saved:"
      %ul
        - @space.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description, :class => "tinymce", :rows => 40, :cols => 120
  .field
    = f.label :published
    = f.check_box :published
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :avatar
    = f.text_field :avatar
  .field
    = f.label :lat
    = f.text_field :lat
  .field
    = f.label :long
    = f.text_field :long
  .field
    = f.label :local
    = f.text_field :local
  .actions
    = f.submit 'Save'
