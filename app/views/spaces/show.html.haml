.container
  .row
    .col-md-12
      %p#notice= notice
      %h1=@space.title
  .row
    .col-md-12
      %p
        %b= I18n.t(:views)
        = ":"
        = @space.impressionist_count
      %p
        %b= I18n.t(:visitors)
        = ":"
        = @space.impressionist_count(:filter=>:session_hash)
      %p
        %b{data: {action: 'votes'}}= I18n.t(:votes)
        = ":"
        = @space.votes_for.size
      %p
        %b= I18n.t(:likes)
        = ":"
        = @space.get_upvotes.size
      %p
        %b= I18n.t(:dislikes)
        = ":"
        = @space.get_downvotes.size
  .row
    .col-md-6.col-sm-12
      = link_to @space.user.name, user_url(@space.user)
  .row
    .col-md-6.col-sm-12
      = @space.avatar
    .col-md-6.col-sm-12
      %p
        = @space.description
  .row
    .col-md-12
      .relative-content
        = @space.content.html_safe if @space.content?
  .row
    .col-md-12
      %h2 Location
      %h3= @space.local
  .row
    .col-md-12
      %table
        - @space.polls.each do |poll|
          %tr
            %th{:scope => "row"}= poll.id
            %td= link_to poll.title, '/@/' + poll.space.user_id.to_s + '/spaces/' + poll.space.id.to_s + '/polls/' + poll.id.to_s
            %td= poll.name
            %td= poll.published
            %td= link_to 'Edit', edit_space_path(poll), :'data-turbolinks' => "false"
            %td= link_to 'Destroy', poll, method: :delete, data: { confirm: 'Are you sure?' }
      - if current_user.first.liked? @space
        = link_to 'Unlike', unlike_user_space_path(@space), method: :put, remote: true, class: 'unlike_post'
      - else
        = link_to 'Like', like_user_space_path(@space), method: :put, remote: true, class: 'like_post'
      \|
      = link_to 'Edit', edit_space_path(@space), :'data-turbolinks' => "false"
      \|
      = link_to 'Back', spaces_path
