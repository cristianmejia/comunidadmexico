= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title, :class => 'form-control'
  .field
    = f.label :name
    = f.text_field :name, :class => 'form-control'
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :published
    = f.check_box :published
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :photo
    = f.text_field :photo, :class => 'form-control'
  .field
    = f.label :space
    = f.text_field :space, :class => 'form-control'
  .actions
    = f.submit 'Save'
