= form_for @medium do |f|
  - if @medium.errors.any?
    #error_explanation
      %h2= "#{pluralize(@medium.errors.count, "error")} prohibited this medium from being saved:"
      %ul
        - @medium.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :space
    = f.text_field :space
  .actions
    = f.submit 'Save'
