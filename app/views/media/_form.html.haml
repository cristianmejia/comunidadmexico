= form_for(@medium, url: user_space_media_path) do |f|
  - if @medium.errors.any?
    #error_explanation
      %h2= "#{pluralize(@medium.errors.count, "error")} prohibited this medium from being saved:"
      %ul
        - @medium.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title, :class => 'form-control'
  .field
    = f.label :name
    = f.text_field :name, :class => 'form-control'
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :author
    = f.text_field :author, :class => 'form-control'
  .field
    = f.label :url
    = f.text_field :url, :class => 'form-control'
  .actions
    = f.submit 'Save'
