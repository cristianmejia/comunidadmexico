.container
  .row
    .col-md-12
      %p#notice= notice
  .row
    .col-md-12

      %p
        %b Title:
        = @poll.title
      %p
        %b Name:
        = @poll.name
      %p
        %b Space:
        = link_to @poll.space
      %p
        %b
          = I18n.t(:views)
          = ":"
          = @poll.impressionist_count
      %p
        %b
          = I18n.t(:visitors)
          = ":"
          = @poll.impressionist_count(:filter=>:session_hash)
      %p
        %b= I18n.t(:votes)
        = ":"
        = @space.votes_for.size
      %p
        %b= I18n.t(:likes)
        = ":"
        = @space.get_upvotes.size
      %p
        %b= I18n.t(:dislikes)
        = ":"
        = @space.get_downvotes.size
      %p
        %b Description:
        = @poll.description
      %p
        %b Content:
        = @poll.content
      %p
        %b Author:
        = @poll.author

      = link_to 'Edit', edit_poll_path(@poll)
      \|
      = link_to 'Back', polls_path
