.container
  .row
    .col-md-12
      %h1 Listing polls

      %table
        %thead
          %tr
            %th Title
            %th Name
            %th Space
            %th Description
            %th Content
            %th Author
            %th
            %th
            %th

        %tbody
          - @polls.each do |poll|
            %tr
              %td= poll.title
              %td= poll.name
              %td= poll.space
              %td= poll.description
              %td= poll.content
              %td= poll.author
              %td= link_to 'Show', user_space_polls_path(poll.space, poll.space.user)
              %td= link_to 'Edit', edit_user_space_poll_path(poll)
              %td= link_to 'Destroy', poll, method: :delete, data: { confirm: 'Are you sure?' }

      %br

      = link_to 'New Poll', new_user_space_poll_path
