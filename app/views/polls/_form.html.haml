= form_for @poll do |f|
  - if @poll.errors.any?
    #error_explanation
      %h2= "#{pluralize(@poll.errors.count, "error")} prohibited this poll from being saved:"
      %ul
        - @poll.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :space
    = f.text_field :space
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :author
    = f.text_field :author
  .actions
    = f.submit 'Save'
