= form_for(@poll, url: user_space_polls_path) do |f|
  - if @poll.errors.any?
    #error_explanation
      %h2= "#{pluralize(@poll.errors.count, "error")} prohibited this poll from being saved:"
      %ul
        - @poll.errors.full_messages.each do |message|
          %li= message

  .field.md-form.form-group
    = f.label :title
    = f.text_field :title, :class => 'form-control'
  .field.md-form.form-group
    = f.label :name
    = f.text_field :name, :class => 'form-control'
  .field.md-form.form-group
    = f.label :description
    = f.text_area :description
  .field.md-form.form-group
    = tinymce_assets
    = tinymce
    = f.label :content
    = f.text_area :content, :class => "tinymce", :rows => 40, :cols => 120
  .field.md-form.form-group
    = f.label :author
    = f.text_field :author, :class => 'form-control'
  .actions
    = f.submit 'Save', :class => "btn btn-link btn-primary"
